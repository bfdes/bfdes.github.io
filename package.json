{
  "name": "bfdes.in",
  "version": "1.0.0",
  "description": "Personal blog",
  "main": "index.js",
  "author": "Bruno Fernandes",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:dev": "webpack -w --mode development --config webpack/dev.config.js",
    "serve:dev": "nodemon dist/server.js ./posts",
    "build:prod": "webpack --mode production --config webpack/prod.config.js",
    "serve:prod": "node dist/server.js ./posts",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "yarn run build:prod"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "highlight.js": "^9.12.0",
    "katex": "0.9.0",
    "marked": "^0.4.0",
    "morgan": "^1.9.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "styled-components": "^3.4.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/express": "^4.16.0",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^23.3.1",
    "@types/katex": "^0.5.0",
    "@types/marked": "^0.4.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.8",
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/supertest": "^2.0.5",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "typescript": "^3.0.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  },
  "engines": {
    "node": "8"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.(ts|tsx)$",
    "moduleNameMapper": {
      "\\.(svg|jpeg)$": "<rootDir>/tests/setup/assetTransformer.js"
    }
  }
}
