{
  "name": "bfdes.in",
  "version": "1.0.0",
  "description": "Personal blog",
  "main": "index.js",
  "author": "Bruno Fernandes",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:dev": "webpack -w --config=webpack/dev.config.js",
    "serve:dev": "nodemon dist/server.js ./posts",
    "build:prod": "webpack --config=webpack/prod.config.js",
    "serve:prod": "node dist/server.js ./posts",
    "postinstall": "yarn build:prod",
    "lint": "tslint --project .",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "highlight.js": "^9.15.8",
    "katex": "^0.10.0",
    "marked": "0.3.18",
    "morgan": "^1.9.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/enzyme": "^3.1.15",
    "@types/express": "^4.16.0",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^23.3.10",
    "@types/katex": "^0.5.0",
    "@types/marked": "^0.5.0",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/supertest": "^2.0.7",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "file-loader": "^3.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "tslint": "^5.18.0",
    "typescript": "^3.2.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  },
  "engines": {
    "node": "10"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.(ts|tsx)$",
    "moduleNameMapper": {
      "\\.(svg|jpeg)$": "<rootDir>/tests/setup/assetTransformer.js"
    }
  },
  "nodemonConfig": {
    "watch": [
      "posts",
      "dist/server.js"
    ],
    "ext": "md,js"
  }
}
